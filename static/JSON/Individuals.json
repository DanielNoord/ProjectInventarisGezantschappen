{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "additionalProperties": {
    "$ref": "#/definitions/person"
  },
  "definitions": {
    "date": {
      "description": "A string containing a date",
      "pattern": "^([0-9]{4})?-?([0-9]{2})?-?([0-9]{2})?/?([0-9]{4})?-?([0-9]{2})?-?([0-9]{2})?$",
      "type": "string"
    },
    "function-title": {
      "description": "An array describing a function or title",
      "items": [
        {
          "type": "string"
        },
        {
          "oneOf": [
            {
              "$ref": "#/definitions/date"
            },
            {
              "type": "null"
            }
          ]
        }
      ],
      "maxLength": 2,
      "minLength": 2,
      "type": "array"
    },
    "person": {
      "description": "A person, named by its identifier",
      "properties": {
        "ISNI:id": {
          "description": "ID of indidivual on ISNI. Starts with 0000 and then 3x 4 integers",
          "oneOf": [
            {
              "pattern": "^0000( \\d\\d\\d\\d){2} \\d\\d\\d(\\d|X)$",
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "comment": {
          "description": "Comments about extra info or the person",
          "type": "string"
        },
        "comment_daniel": {
          "description": "Comments made by DaniÃ«l, not relevant for future users",
          "type": "string"
        },
        "date_of_birth": {
          "$ref": "#/definitions/date",
          "description": "Date of birth of individual"
        },
        "date_of_death": {
          "$ref": "#/definitions/date",
          "description": "Date of death of individual"
        },
        "functions": {
          "function": "Array of functions of individual",
          "items": {
            "$ref": "#/definitions/function-title"
          },
          "type": "array"
        },
        "images": {
          "additionalItems": {
            "type": "string"
          },
          "description": "Array of relevant images",
          "items": [
            {
              "type": "string"
            }
          ],
          "minItems": 1,
          "type": "array"
        },
        "name": {
          "description": "Name of individual",
          "type": "string"
        },
        "person_type": {
          "description": "Type of person using numbering scheme",
          "type": "number"
        },
        "place_of_birth": {
          "description": "Date of birth of individual",
          "type": "string"
        },
        "place_of_death": {
          "description": "Place of death of individual",
          "type": "string"
        },
        "sources": {
          "additionalItems": {
            "type": "string"
          },
          "description": "Array of relevant sources",
          "items": [
            {
              "type": "string"
            }
          ],
          "minItems": 1,
          "type": "array"
        },
        "surname": {
          "description": "Surname of individual",
          "type": "string"
        },
        "titles": {
          "description": "Array of titles of individual",
          "items": {
            "$ref": "#/definitions/function-title"
          },
          "type": "array"
        },
        "wikidata:id": {
          "description": "ID of indidivual on WikiData. Should start with a Q or be null",
          "oneOf": [
            {
              "pattern": "^Q.+$",
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "surname",
        "name",
        "date_of_birth",
        "place_of_birth",
        "date_of_death",
        "place_of_death",
        "titles",
        "functions",
        "comment",
        "comment_daniel",
        "person_type",
        "sources",
        "images",
        "wikidata:id",
        "ISNI:id"
      ],
      "type": "object"
    }
  },
  "properties": {
    "$schema": "string"
  },
  "title": "List of all individuals mentioned in the archive",
  "type": "object",
  "uniqueItems": true
}
