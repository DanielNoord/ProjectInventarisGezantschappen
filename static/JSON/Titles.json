{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "additionalProperties": {
    "$ref": "#/definitions/title"
  },
  "definitions": {
    "title": {
      "description": "An individual possible title",
      "properties": {
        "comment": {
          "description": "Comment related to the function or translation",
          "type": "string"
        },
        "en_GB": {
          "description": "Translation of the title in English",
          "type": "string"
        },
        "nl_NL": {
          "description": "Translation of the title in Dutch",
          "type": "string"
        },
        "position": {
          "description": "The position of the title, denotes its place in a full name",
          "pattern": "(Before)|(Middle)|(After)",
          "type": "string"
        }
      },
      "required": [
        "en_GB",
        "nl_NL",
        "position"
      ],
      "type": "object"
    }
  },
  "properties": {
    "$schema": "string"
  },
  "title": "Titles of people in the archive in Italian",
  "type": "object",
  "uniqueItems": true
}
